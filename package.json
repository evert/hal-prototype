{
  "name": "hal-prototype",
  "version": "0.0.1",
  "description": "Experiment for rapid prototyping HAL services",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon -w dist",
    "build": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evert/hal-prototype.git"
  },
  "keywords": [
    "hal",
    "rest",
    "hateaos"
  ],
  "author": "me@evertpot.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evert/hal-prototype/issues"
  },
  "homepage": "https://github.com/evert/hal-prototype#readme",
  "dependencies": {
    "curveball": "^0.2.0",
    "highlight.js": "^9.12.0",
    "node-fetch": "^2.1.2",
    "npm": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^9.6.7",
    "@types/node-fetch": "^1.6.9",
    "@types/highlight.js": "^9.12.2",
    "concurrently": "^3.5.1",
    "nodemon": "^1.17.3",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  }
}
